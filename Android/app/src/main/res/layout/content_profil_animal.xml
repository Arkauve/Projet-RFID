<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name"
        android:textSize="24sp"
        tools:layout_editor_absoluteX="101dp"
        tools:layout_editor_absoluteY="141dp"
        android:layout_marginEnd="23dp"
        android:layout_marginTop="209dp"
        android:layout_alignParentTop="true"
        android:layout_toStartOf="@+id/Tx_Name" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Age"
        android:textSize="24sp"
        tools:layout_editor_absoluteX="122dp"
        tools:layout_editor_absoluteY="183dp"
        android:layout_alignBaseline="@+id/Tx_Age"
        android:layout_alignBottom="@+id/Tx_Age"
        android:layout_alignEnd="@+id/textView6" />

    <TextView
        android:id="@+id/Tx_Age"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Age"
        android:textSize="24sp"
        tools:layout_editor_absoluteX="193dp"
        tools:layout_editor_absoluteY="183dp"
        android:layout_marginTop="63dp"
        android:layout_below="@+id/Tx_Name"
        android:layout_alignStart="@+id/Tx_Name" />

    <TextView
        android:id="@+id/Tx_Name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name"
        android:textSize="24sp"
        tools:layout_editor_absoluteX="193dp"
        tools:layout_editor_absoluteY="141dp"
        android:layout_marginEnd="115dp"
        android:layout_alignBaseline="@+id/textView6"
        android:layout_alignBottom="@+id/textView6"
        android:layout_alignParentEnd="true" />

    <Button
        android:id="@+id/Btn_Historic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView4"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="79dp"
        android:text="Afficher son historique" />
</RelativeLayout>
