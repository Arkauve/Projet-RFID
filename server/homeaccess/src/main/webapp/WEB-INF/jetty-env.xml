<?xml version="1.0"?>
<!DOCTYPE Configure PUBLIC "-//Jetty//Configure//EN"
        "http://www.eclipse.org/jetty/configure_9_0.dtd">

<Configure id="homeaccess" class="org.eclipse.jetty.maven.plugin.JettyWebAppContext">
    <New id="CatPass" class="org.eclipse.jetty.plus.jndi.Resource">
        <Arg></Arg>
        <Arg>java:comp/env/jdbc/catpass</Arg>
        <Arg>
            <New class="com.mysql.jdbc.jdbc2.optional.MysqlConnectionPoolDataSource">
                <Set name="Url">jdbc:mysql://localhost:3306/</Set>
                <Set name="DatabaseName">catpass</Set>
                <Set name="User">root</Set>
                <Set name="Password">root</Set>
            </New>
        </Arg>
    </New>
</Configure>